<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4388CC">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sun_img_ani"
        android:background="@raw/layer_9"
        android:layout_alignBottom="@+id/cloud_img_ani"
        android:layout_alignRight="@+id/cloud_img_ani"
        android:layout_alignEnd="@+id/cloud_img_ani" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cloud_img_ani"

        android:background="@raw/layer_2"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
